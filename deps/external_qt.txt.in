# ----------------------------------------------------------------------- #
# -------------------------- Set CMake version -------------------------- #
# ----------------------------------------------------------------------- #
cmake_minimum_required(VERSION 3.11)
# ----------------------------------------------------------------------- #
# -------------------------- Fetch dependencies ------------------------- #
# ----------------------------------------------------------------------- #
project(qt NONE)

set(prefix_dir @EGNITE_BUILD_DEPS_DIR@/qt)
set(install_dir ${prefix_dir}/src/qt-install)

if(WIN32)
    set(configure_script ./configure.bat)
else()
    set(configure_script ./configure)
endif()

include(ExternalProject)
ExternalProject_Add(
    qt
    URL                         
        https://download.qt.io/official_releases/qt/6.2/6.2.5/single/qt-everywhere-opensource-src-6.2.5.tar.xz
    URL_MD5                     
        9d6745b9b57747c054aa3d1053b76e84
    PREFIX                      
        ${prefix_dir}
    BUILD_IN_SOURCE             
        TRUE
    LOG_BUILD 
        TRUE
    LOG_INSTALL 
        TRUE
    DOWNLOAD_EXTRACT_TIMESTAMP  
        TRUE
    CONFIGURE_COMMAND           
        ${configure_script} 
        -confirm-license -opensource 
        -skip qtwebengine -skip qtwebview
        -nomake examples -nomake tests 
        -qpa xcb -prefix ${install_dir}
    BUILD_COMMAND               
        ${CMAKE_COMMAND} 
        --build .
    INSTALL_COMMAND             
        ${CMAKE_COMMAND} 
        --build . 
        --target install
    TEST_COMMAND                
        "")
# ----------------------------------------------------------------------- #