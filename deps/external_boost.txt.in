# ----------------------------------------------------------------------- #
# ------------------------- Set CMake version --------------------------- #
# ----------------------------------------------------------------------- #
cmake_minimum_required(VERSION 3.11)
# ----------------------------------------------------------------------- #
# ------------------------- Fetch dependencies -------------------------- #
# ----------------------------------------------------------------------- #
project(boost NONE)

set(prefix_dir @EGNITE_BUILD_DEPS_DIR@/boost)
set(install_dir ${prefix_dir}/src/boost-install)

include(ExternalProject)
ExternalProject_Add(
    boost
    GIT_REPOSITORY      https://github.com/boostorg/boost.git
    GIT_TAG             boost-1.79.0
    PREFIX              ${prefix_dir}
    BUILD_IN_SOURCE     TRUE
    CONFIGURE_COMMAND   ./bootstrap.sh --without-libraries=python
    BUILD_COMMAND       ./b2 link=static
    INSTALL_COMMAND     ./b2 install --prefix=${install_dir}
    TEST_COMMAND        "")
# ----------------------------------------------------------------------- #